<div class="row mt-3 text-center justify-content-center">
      <div class="col-sm-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">
              <%= form_with model: @pizzas do |form| %>
                <p>
                    <%= form.label :name, "Nazwa: " %>
                    <%= form.text_field :name %>
                </p>
                <p>
                    <%= form.label :name, "Ocena: " %>
                    <%= form.number_field :rate %>
                </p>
                    <%= form.submit %>
              <% end %>
            </h5>
          </div>
        </div>
      </div>
</div>