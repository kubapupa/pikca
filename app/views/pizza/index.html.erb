<% if @pizzas.count > 0 %>
<div class="row mt-3 text-center justify-content-center">
      <div class="col-sm-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to "Dodaj", pizza_new_path, class: "btn btn-success" %>
            </h5>
          </div>
        </div>
      </div>
    </div>
  <% @pizzas.each do |pizza| %>
    <div class="row mt-3 text-center justify-content-center">
      <div class="col-sm-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">
                <%= pizza.name.capitalize %>
            </h5>
            <p class="card-text">
                <%= pizza.rate %>
            </p>
            <%= link_to "Usuń", "/pizza/delete/#{pizza.id}", class: "btn btn-danger" %>
            <%= link_to "Edytuj", "/pizza/edit/#{pizza.id}", class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% else %>
  <div class="row mt-3 text-center justify-content-center">
    <div class="col-sm-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">
            <%= link_to "Dodaj", pizza_new_path, class: "btn btn-success" %>
          </h5>
        </div>
      </div>
    </div>
  </div>
  <div class="row mt-3 text-center justify-content-center">
      <div class="col-sm-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">
                Brak elementów do wyświetlenia
            </h5>
          </div>
        </div>
      </div>
    </div>
<% end %>